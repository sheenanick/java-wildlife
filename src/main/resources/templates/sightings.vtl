<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <a href="/sightings/new"><button type="button" class="btn btn-primary">Add Sighting</button></a>
    <h3>All Sightings:</h3>
    #foreach($sighting in $sightings)
      <h5><a href="/animals/$sighting.getAnimalId()">$Animal.find($sighting.getAnimalId()).getName()</a></h5>
      <p><em>$sighting.getTimestamp()</em></p>
      <p>
        Location: $sighting.getLocation(), Ranger: $sighting.getRangerName()
        <a href="/sightings/$sighting.getId()/edit" class="edit"> [edit]</a>
        <a href="/sightings/$sighting.getId()/delete" class="delete"> [delete]</a>
      </p>
    #end
  </div>
</div>
